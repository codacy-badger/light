		buffer_count := 0;

		tmp : u64;
		while (number > 0) {
			tmp = number % 10;
			number = number / 10;

            number_digit := ASCII_ZERO + cast(u8) tmp;
            //print_byte(number_digit);
			buffer[buffer_count] = number_digit;
			buffer_count = buffer_count + 1;
		}
