print_ptr :: fn (str: *byte) {
	print_ptr_len(str, string_length(str));
}

print_byte :: fn (c: byte) {
    print_ptr_len(*c, 1);
}

print :: fn (str: string) {
	print_ptr_len(str.data, str.length);
}

println :: fn (str: string) {
	print(str);
	print("\n");
}

ASCII_ZERO :: 0b00110000;

