import "examples/win32.li"

std_handle_out : *void;

print :: fn (data: *u8, length: u32) {
	std_handle_out = GetStdHandle(STD_OUTPUT_HANDLE);

	if (std_handle_out != INVALID_HANDLE_VALUE) {
		console_mode : u32;
		is_console := GetConsoleMode(std_handle_out, *console_mode);

		if is_console {
			WriteConsole(std_handle_out, data, length, 0, 0);
		} else {
			WriteFile(std_handle_out, data, length, 0, 0);
		}
	}
}
